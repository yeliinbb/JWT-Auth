{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowJs": true,
    "target": "ES2020",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "src/test/**/*"],
  "exclude": ["node_modules"]
}
